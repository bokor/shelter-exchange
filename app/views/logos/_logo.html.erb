<%= image_tag @shelter.logo.url(:small) %><br />
<% if @shelter.logo.file? %>
	<%= link_to "Delete logo", logo_path(@current_shelter), :method => :delete, :confirm => "Are you sure?", :remote => true %><br /><br />
	<%= label_tag "shelter[logo]", "Change logo" %><br />
	<%= file_field_tag "shelter[logo]"  %>
<% else %>
	<%= label_tag "shelter[logo]", "Upload logo" %><br />
	<%= file_field_tag "shelter[logo]"  %>
<% end %>