<%= title "#{@shelter.name} | #{@shelter.city}, #{@shelter.state}" %>

<%= description "Help the #{@shelter.name}, located in #{@shelter.city}, #{@shelter.state}, by adopting an animal or donating items most needed at this shelter or rescue group." %>
<%= keywords "#{@shelter.name}, #{@shelter.city}, #{@shelter.state}, find a animal shelter, find a rescue group, shelters, rescue groups, wish list, help a shelter, help a rescue group, adoptable animals, available for adoption" %>

<%= seo_location "#{@shelter.city}, #{@shelter.state}" %>
<%= seo_image "#{@shelter.logo.url(:medium)}" %>


<%= content_for :javascripts do %>
	<script type="text/javascript">var switchTo5x=true;</script>
	<script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
	<script type="text/javascript">
		stLight.options({
			publisher:'d7bacbc7-2f1f-42dc-a606-db2a54f70db5',
			onhover: false
		});
	</script>
	<script type="text/javascript">
		$(function() {
			HelpAShelter.filterInitialize();
		});
	</script>

<% end %>

<%= content_for :page_content do %>

	<div class="social">
		<!-- Share This -->
		<span class='st_facebook' displayText='Facebook'></span>
		<span class='st_twitter' displayText='Tweet'></span>
		<span class='st_email' displayText='Email'></span>
		<span class='st_sharethis' displayText='ShareThis'></span>
		<!--// Share This -->
	</div>

	<div id="shelter_details">
		<div class="logo">
			<%= image_tag @shelter.logo.url(:thumb) %>
		</div>
		
		<div class="address_info">
			<h2><%=@shelter.name%></h2>
			<ul>
				<li><%=@shelter.street %></li>
				<li><%=@shelter.city%>, <%=@shelter.state%> <%=@shelter.zip_code%></li>
			</ul>
			<br />
			<ul>
				<li>Phone: <%=number_to_phone(@shelter.phone, :delimiter => "-")%></li>
				<li class="action_links">
					<span><%= link_to "Email Us", "mailto:#{@shelter.email}?subject=From Shelter Exchange" %>|</span>
					<% unless @shelter.website.blank? %>
						<span><%= link_to "Visit Website", @shelter.website, :target => "_blank" %>|</span>
					<% end %>
					<span><a href="http://maps.google.com/maps?f=d&source=s_d&saddr=&daddr=<%=get_directions_address(@shelter)%>&hl=en" target="_blank">Get Directions</a></span>
				</li>
			</ul>
		</div>
		
		<div class="wish_list">
			<h2>Our wish list</h2>
			<% unless @items.blank? %>
				<ol id="items">
					<% @items.each do |item| %>
						<% unless item.name.blank? %><li><%= item.name %></li><% end %>
					<% end %>
				</ol>
			<% else %>
				<p>Shelter has not provided a wish list</p>
			<% end %>
		</div>
		
	</div>

	<div class="search_content">
		<span class="helper_links">
			<ul class="toggle_buttons">
				<li><a href="#narrow_search_results">Narrow your search results</a></li>
			</ul>
			<ul class="toggle_buttons">
				<li><a href="#help_text">?</a></li>
			</ul>
		</span>
	</div>
	
	<div class="map_separator"></div>
	
	<div id="help_text" class="section_heading no_borders blue">
		<h3>Help</h3>
		<p>Click 'Narrow your search results' to easily filter animals by their type, breed, sex and to view animals scheduled for euthanasia or with special needs.</p>
	</div>
		
	<div id="narrow_search_results" class="section_heading no_borders blue">
		<%= render "form_filters" %>
	</div>
	
	<div id="animals"></div>
	
	
<% end %>

<%= content_for :sidebar do %>

	
<% end %>
	
