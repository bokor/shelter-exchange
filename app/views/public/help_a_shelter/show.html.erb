<%= title "#{@shelter.name} | #{@shelter.city}, #{@shelter.state}" %>

<%= description "#{@shelter.name} currently has #{@types.collect{|type| type.name.pluralize.downcase}.to_sentence} available for ddoption, and is located in #{@shelter.city}, #{@shelter.state}" %>

<%= keywords "" %>

<%= canonical_url public_help_a_shelter_url(@shelter) %>
<%= seo_location "#{@shelter.city}, #{@shelter.state}" %>
<%= seo_image "#{@shelter.logo.url(:medium)}" %>


<%= content_for :javascripts do %>
<% end %>

<%= content_for :page_content do %>

	<div id="shelter_details">
		<div class="logo">
			<%= image_tag @shelter.logo.url(:thumb) %>
		</div>
		
		<div class="address_info">
			<h2><%=@shelter.name%></h2>
			<ul>
				<li><%=@shelter.street %></li>
				<li><%=@shelter.city%>, <%=@shelter.state%> <%=@shelter.zip_code%></li>
			</ul>
			<br />
			<ul>
				<li>Phone: <%=number_to_phone(@shelter.phone, :delimiter => "-")%></li>
				<li class="action_links">
					<span><%= link_to "Email Us", "mailto:#{@shelter.email}?subject=From Shelter Exchange" %>|</span>
					<% unless @shelter.website.blank? %>
						<span><%= link_to "Visit Website", @shelter.website %>|</span>
					<% end %>
					<span><a href="http://maps.google.com/maps?f=d&source=s_d&saddr=&daddr=<%=get_directions_address(@shelter)%>&hl=en" target="_blank">Get Directions</a></span>
				</li>
			</ul>
		</div>
		
		<div class="wish_list">
			<h2>Wish List</h2>
			<% unless @items.blank? %>
				<ol id="items">
					<% @items.each do |item| %>
						<% unless item.name.blank? %><li><%= item.name %></li><% end %>
					<% end %>
				</ol>
			<% else %>
				<p>Shelter has not provided a wish list</p>
			<% end %>
		</div>
		
	</div>

	<div class="search_content">
		<span class="helper_links">
			<ul class="toggle_buttons">
				<li><a href="#narrow_search_results">Narrow your search results</a></li>
			</ul>
			<ul class="toggle_buttons">
				<li><a href="#help_text">?</a></li>
			</ul>
		</span>
	</div>
	
	<div class="map_separator"></div>
	
	<div id="help_text" class="section_heading no_borders blue">
		<h3>Help</h3>
		<p>Use the interactive map below to find adoptable animals in your area.
		Click  ‘Narrow your search results’ to easily filter animals by their type, breed, sex and to view those with the greatest needs.
		Drag your curser over the map to find the area you wish to search in, zoom in and out using the + and – buttons, or simply type in a city, State or zip code, or search by a specific shelter name.</p>
	</div>
		
	<div id="narrow_search_results" class="section_heading no_borders blue">
		<%= render "form_filters" %>
	</div>
	
	<div id="animals"></div>
	
	
<% end %>

<%= content_for :sidebar do %>

	
<% end %>
	
