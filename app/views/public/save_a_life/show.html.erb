<%= title "#{@animal.name} - #{@animal.full_breed} | #{@shelter.city}, #{@shelter.state}" %>

<%= description "#{@animal.name} is a #{@animal.sex.downcase} #{@animal.animal_type.name.downcase}, #{@animal.full_breed}, located at #{@shelter.name} in #{@shelter.city}, #{@shelter.state}." %>

<%= keywords "adopt a #{@animal.animal_type.name.downcase}, #{@animal.full_breed}, #{@shelter.name}, #{@shelter.city}, #{@shelter.state}, #{US_STATES[@shelter.state]}, adopt animals, save animals, save a life, animal adoptions, animals in need, adopt a pet" %>

<%= robots "noindex,follow" if !@animal.available_for_adoption? %>
<%= seo_location "#{@shelter.city}, #{@shelter.state}" %>
<%= seo_image "#{@animal.photo.url(:medium)}" %>


<%= content_for :javascripts do %>
	<script type="text/javascript">var switchTo5x=true;</script>
	<script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
	<script type="text/javascript">
		stLight.options({
			publisher:'d7bacbc7-2f1f-42dc-a606-db2a54f70db5',
			onhover: false
		});
	</script>
<% end %>

<%= content_for :page_content do %>

	<div class="animal">
		<h1><%= @animal.name %></h1>
		
		<span class="social">
			<!-- Share This -->
			<span class='st_facebook' displayText='Facebook'></span>
			<span class='st_twitter' displayText='Tweet'></span>
			<span class='st_email' displayText='Email'></span>
			<span class='st_sharethis' displayText='ShareThis'></span>
			<!--// Share This -->
		</span>
		<span class="type"><%= @animal.animal_type.name %>:  <%= @animal.full_breed %></span>
		<span class="status"><%= public_animal_status(@animal) %></span>
	</div>

	<% if @shelter.kill_shelter? and @animal.available_for_adoption? %>
		<p class="euthanasia_info">Scheduled to be euthanized on <%= format_date(:long, @animal.euthanasia_date) %>.</p>
	<% end %>
		 
	<table class="animal_details">
		<tr>
			<td class="metadata">
				
				<h3>Details:</h3>
				<ul> 
					<li><p><b>Weight:</b>  <%= @animal.weight.present? ? @animal.weight : "N/A" %></p></li>
					<li><p><b>Size:</b>  <%= @animal.size.present? ? @animal.size : "N/A" %></p></li>
					<li><p><b>Age (Est.):</b>  <%= @animal.date_of_birth.present? ? humanize_dob(@animal.date_of_birth) : "N/A" %></p></li>
					<li><p><b>Color:</b>  <%= @animal.color.present? ? @animal.color : "N/A" %></p></li>
					<li><p><b>Sex:</b>  <%= @animal.sex.humanize unless @animal.sex.blank? %> <% if @animal.is_sterilized %>(Sterilized)<% end %></p></li>
				</ul>
				
				<% if @animal.special_needs? %>
					<h3>Special Needs:</h3>
					<p><%= @animal.special_needs %></p>
				<% end %>
				
				<h3>Description:</h3>
				<p><%= @animal.description.blank? ? "No description provided" : auto_link(@animal.description, :all, :target => "_blank").html_safe %></p>
			</td>
			<td class="image">
			    <%= image_tag @animal.photo.url(:medium) %>
			</td>
		</tr>
	</table>
	
	<div class="animal_shelter">
		<%= render "shelter_details" %>
		<p>Please contact <%= @shelter.name %> for more information on how to adopt <%=@animal.name %>.</p>
	</div>
	
	
<% end %>

<%= content_for :sidebar do %>

	
<% end %>
	
