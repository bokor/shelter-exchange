<%= title "#{@animal.name} - #{@animal.full_breed} - #{@shelter.city}, #{@shelter.state}" %>

<%= description "#{@animal.name} is a #{@animal.sex.downcase} #{@animal.animal_type.name.downcase}, #{@animal.full_breed}, located at #{@shelter.name} in #{@shelter.city}, #{@shelter.state}." %>

<%= keywords "adopt a #{@animal.animal_type.name.downcase}, #{@animal.full_breed}, #{@shelter.name}, #{@shelter.city}, #{@shelter.state}, #{US_STATES[@shelter.state]}, adopt animals, save animals, save a life, animal adoptions, animals in need, adopt a pet" %>

<%= robots "noindex,follow" if !@animal.available_for_adoption? %>

<%= seo_image "#{@animal.photo.url(:medium)}" %>


<%= content_for :open_graph_meta do %>
	<% if @animal.video_url %>
		<meta property="og:video" content="<% @animal.video_url %>" />
	<% end %>
    <meta property="og:latitude" content="<%= @shelter.lat %>"/>
    <meta property="og:longitude" content="<%= @shelter.lng %>"/>
    <meta property="og:street-address" content="<%= @shelter.street %>"/>
    <meta property="og:locality" content="<%= @shelter.city %>"/>
    <meta property="og:region" content="<%= @shelter.state %>"/>
    <meta property="og:postal-code" content="<%= @shelter.zip_code %>"for/>
    <meta property="og:country-name" content="USA"/>
    <meta property="og:email" content="<%= @shelter.email %>"/>
    <meta property="og:phone_number" content="<%= number_to_phone(@shelter.phone, :delimiter => "-") %>"/>
<% end %>


<%= content_for :javascripts do %><% end %>

<%= content_for :page_content do %>

	<div class="animal">
		<h1><%= @animal.name %>
			<span class="social">
				<span><div class="fb-like" data-send="false" data- data-layout="button_count"data-show-faces="false"></div></span>
				<span><a href="https://twitter.com/share" class="twitter-share-button" data-via="shelterexchange" data-related="shelterexchange<%=",#{@shelter.twitter.slice(1..-1)}" if @shelter.twitter %>">Tweet</a></span>
				<span><a href="http://pinterest.com/pin/create/button/?url=<%=request.url %>&media=<%=@animal.photo.url(:large) %>&description=<%=pinterest_animal_description(@animal, @shelter)%>" class="pin-it-button" count-layout="horizontal">Pin It</a></span>
			</span>
		</h1>
		
		<span class="type"><%= @animal.animal_type.name %>:  <%= @animal.full_breed %></span>
		<span class="status"><%= public_animal_status(@animal) %></span>
	</div>

	<% if @shelter.kill_shelter? and @animal.available_for_adoption? and @animal.euthanasia_date.present? %>
		<p class="euthanasia_info">Scheduled to be euthanized on <%= format_date(:long, @animal.euthanasia_date) %>.</p>
	<% end %>
		 
	<table class="animal_details">
		<tr>
			<td class="metadata">
				
				<h3>Details:</h3>
				<ul> 
					<li><p><b>Weight:</b>  <%= @animal.weight.present? ? @animal.weight : "N/A" %></p></li>
					<li><p><b>Size:</b>  <%= @animal.size.present? ? @animal.size : "N/A" %></p></li>
					<li><p><b>Age (Est.):</b>  <%= @animal.date_of_birth.present? ? humanize_dob(@animal.date_of_birth) : "N/A" %></p></li>
					<li><p><b>Color:</b>  <%= @animal.color.present? ? @animal.color : "N/A" %></p></li>
					<li><p><b>Sex:</b>  <%= @animal.sex.humanize unless @animal.sex.blank? %> <% if @animal.is_sterilized %>(Sterilized)<% end %></p></li>
				</ul>
				
				<% if @animal.special_needs? %>
					<h3>Special Needs:</h3>
					<p><%= auto_link( simple_format(@animal.special_needs), :all, :target => "_blank").html_safe %></p>
				<% end %>
				
				<h3>Description:</h3>
				<p><%= @animal.description.blank? ? "No description provided" : auto_link( simple_format(@animal.description), :all, :target => "_blank").html_safe %></p>
			</td>
			<td class="image">
			    <%= image_tag @animal.photo.url(:medium), :alt => "#{@animal.name} - #{@animal.full_breed}" %>
				<% unless @animal.video_url.blank? %>
				<%= link_to "Watch Video", fancybox_video_url(@animal), :class => "button video_player right", :title => "Video of #{@animal.name}" %>
				<% end %>
			</td>
		</tr>
	</table>
	
	<div class="animal_shelter">
		<%= render "shelter_details" %>
		<p>Please contact <%= @shelter.name %> for more information on how to adopt <%=@animal.name %>.</p>
	</div>
	
	
<% end %>

<%= content_for :sidebar do %>

	
<% end %>
	
