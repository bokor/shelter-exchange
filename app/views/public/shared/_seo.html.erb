<!-- title -->
<title><%= yield(:title) %> | Shelter Exchange</title>

<!-- metatags -->
<meta charset="utf-8" />
<meta name="language" content="en"/>

<meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">

<meta name="robots" content="<%= content_for?(:robots) ? yield(:robots) : "index,follow" %>">

<meta name="description" content="<%= yield(:description) %>">
<meta name="keywords" content="<%= yield(:keywords) %>">

<link rel="canonical" href="<%=request.url %>" />

<!-- open graph -->
<meta property="og:title" content="<%= yield(:title) %> | Shelter Exchange" />
<meta property="og:type" content="<%= content_for?(:open_graph_type) ? yield(:open_graph_type) : open_graph_type %>" />
<meta property="og:url" content="<%= request.url %>" />
<meta property="og:image" content="<%= content_for?(:seo_image) ? yield(:seo_image) : "#{full_url}/shelterexchange_icon.png" %>" />
<meta property="og:site_name" content="Shelter Exchange" />
<meta property="og:description" content="<%= yield(:description) %>"/>
<meta property="fb:admins" content="787130340" />
<%= yield(:open_graph_meta) %>

<!-- icons -->
<%= favicon_link_tag 'favicon.ico' %>
<%= favicon_link_tag 'shelterexchange_icon.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png' %>


