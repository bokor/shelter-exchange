<!-- title -->
<title><%= yield(:title) %> | Shelter Exchange</title>

<!-- metatags -->
<meta charset="utf-8">

<meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
<meta name="robots" content="<%= content_for?(:robots) ? yield(:robots) : "index,follow" %>">

<meta name="description" content="<%= yield(:description) %>">
<meta name="keywords" content="<%= yield(:keywords) %>">

<link rel="canonical" href="<%=request.url %>" />

<!-- open graph -->
<meta property="og:title" content="<%= content_for?(:open_graph_title) ? yield(:open_graph_title) : yield(:title) %> | Shelter Exchange" />
<meta property="og:type" content="website" />
<meta property="og:url" content="<%= request.url %>" />
<meta property="og:image" content="<%= content_for?(:open_graph_image) ? yield(:open_graph_image) : image_path("shelterexchange_icon_256x256.png") %>" />
<meta property="og:site_name" content="Shelter Exchange" />
<meta property="og:description" content="<%= yield(:description) %>"/>
<meta property="fb:admins" content="787130340" />

<!-- icons -->
<%= favicon_link_tag 'favicon.ico' %>
<%= favicon_link_tag 'shelterexchange_icon_128x128.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png' %>

