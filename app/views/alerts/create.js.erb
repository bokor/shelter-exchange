<% if @alert.errors.any? %>
	$('#alert_errors').html( "<%= escape_javascript(render 'global/error_messages', :target => @alert) %>" );
<% else %>
	<% if @alert.alertable_type == "Animal" %>
		$('#alerts').prepend("<%= escape_javascript(render 'alert', :alert => @alert) %>"); 
		$(".alert").first().effect("highlight", {}, 1500);
	<% else %>
		$('#global_alerts_section').removeClass("no_alert");
		$('#global_alerts_section').fadeIn(1000);
		$('#global_alerts').prepend("<%= escape_javascript(render @alert) %>"); 
		$("#global_alerts .alert").first().effect("highlight", {}, 1500);
	<% end %>
	$('#new_alert').get(0).reset();
	$('#alert_errors').html("");
<% end %>
<% flash.discard %>
