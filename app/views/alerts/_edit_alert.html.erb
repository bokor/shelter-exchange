<div class="box blue" id="edit_alert_<%=@alert.id %>">
	<h2>Update alert</h2>
	<div id="edit_alert_errors_<%=@alert.id %>"></div>
	<%= form_for (@alert), :remote => true, :format => :js, :html => { :id => "edit_alert_form_#{@alert.id}", :class => "edit_alert_form"} do |f| %>
		<ul>
			<%= render "form", :f => f  %>
	    	<li class="buttons">
				<%= f.submit "Update Alert", :disable_with => "Submitting...", :class => "button" %>
				&nbsp;&nbsp;or&nbsp;&nbsp;
				<%= link_to 'Cancel', '#', :onclick => "Alerts.cancelForm(#{@alert.id});return false;"  %>
			</li>
		</ul>
	<% end %>
</div>
