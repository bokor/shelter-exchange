<div class="alert" id="alert_<%=alert.id %>" style="border: 1px #999 solid; background-color: #fce2ec; padding: 15px;">
 	<ul>
	<% if alert.alertable_id.blank? %>
		<li><h2><%= alert.title %></h2></li>
	<% else %>
	<li><h2><%= alert.alertable_type %> Alert - <%= alert.title %></h2></li>
	<% end %>
		<li><%= alert.description %></li>
	</ul>

  <div class="actions right">
	<%= link_to 'Delete', alert, :confirm => "Are you sure?", :method => :delete, :remote => true %>
  </div>

</div>