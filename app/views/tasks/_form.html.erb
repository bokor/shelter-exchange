<ul class="form">
	<li>
		<%= f.label :info, "Info" %><br />
		<%= f.text_field :info %>
	</li>
	<li>
		<%= f.label :task_category_id, "Category" %><br />
		<%= collection_select(:task, :task_category_id, TaskCategory.all, :id, :name, :include_blank =>  "Select Type") %>
	</li>
	<li>
		<%= f.label :due_category, "due?" %><br />
		<%= select :task, :due_category, Task::DUE_CATEGORY, {},:class => "task_due_category" %>
	</li>
	<li>
		<div class="due_date_field" style="display:none;">
			<div class="due_date_alt"><%=format_date(:long_day_of_week, Date.today)%></div>
			<div class="date_picker"></div>
		</div>
	</li>	
</ul>
<%= f.hidden_field :due_date, :class=>"hidden_due_date" %>