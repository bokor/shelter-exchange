<li>
	<%= f.label :details, "Details <span class='req'>*</span>".html_safe, :class => "desc" %>
	<div><%= f.text_field :details, :class => "field text large", :maxlength => 255, :placeholder => "i.e - Clean and sanitize cat crates." %></div>
	<%= has_error_message?(@task, :details)%>
</li>
<li>
	<%= f.label :category, "Category", :class => "desc" %>
	<div>
	<%= f.collection_select :category, Task::CATEGORIES, :to_s, :humanize, {:include_blank =>  "None"}, {:class => "field select medium" }  %>
	</div>
	<%= has_error_message?(@task, :category)%>
</li>
<li>
	<%= f.label :due_category, "When is it due?", :class => "desc" %>
	<div>
		<%= f.collection_select :due_category, Task::DUE_CATEGORIES, :to_s, :humanize, {}, { :class => "task_due_category field select medium" } %>
	</div>
	<%= has_error_message?(@task, :due_category)%>
</li>
<li style="display:none;">
	<div class="due_date_field">
		<div class="due_date_alt"><%=format_date(:long_day_of_week, Date.today)%></div>
		<div class="date_picker"></div>
		<%= f.hidden_field :due_date, :class => "hidden_due_date" %>
	</div>
</li>	
	
