<div class="task" id="task_<%=task.id %>" style="border: 1px #999 solid; background-color: #fce2ec; padding: 15px;">
 	<ul>
		<li><h2>SUBJECT_TASK - <%= task.info %></h2></li>
		<li><h2><%= task.task_category.name %></h2></li>
	</ul>

  <div class="actions right">
	<%= link_to 'Delete', task, :confirm => "Are you sure?", :method => :delete, :remote => true %>
  </div>

</div>