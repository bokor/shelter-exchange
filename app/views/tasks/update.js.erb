//FIX the Moving or hiding of records when the due_category is changed and we need to move it to another section.

<% if @task.errors.any? %>
	$('#task_errors').html( "<%= escape_javascript(render 'global/error_messages', :target => @task) %>" );
<% else %>
	<% if @changed %>
		$('#edit_task_<%=@task.id%>').slideToggle(3000);
		$('#task_<%=@task.id%>').fadeOut(1500);
		$('#edit_task_<%=@task.id%>').delay(1500).remove();
		$('#task_<%=@task.id%>').delay(1500).remove();
		
		$('#tasks').prepend("<%= escape_javascript(render @task) %>"); 
		<% due_section = @task.due_category %>
		<% if @task.due_date.blank? or @task.due_date > Date.today + 1.day or @task.due_category == 'later' %>
			<% due_section = "later" %>
		<% elsif @task.due_date < Date.today %>
			<% due_section = "overdue" %>
		<% elsif @task.due_date == Date.today %>
			<% due_section = "today" %>
		<% elsif @task.due_date == Date.today + 1.day %>
			<% due_section = "tomorrow" %>
		<% end %>
		$('#<%=due_section %>_tasks_section').removeClass("no_task");
		$('#<%=due_section %>_tasks_section').fadeIn(1000);
		$('#<%=due_section %>_tasks').prepend("<%= escape_javascript(render @task) %>"); //probably append instead of prepend
		$("#<%=due_section %>_tasks .task").first().effect("highlight", {}, 2000);
		
	<% else %>
		$('#edit_task_<%=@task.id%>').slideToggle();
		$('#task_<%=@task.id%>').replaceWith( "<%= escape_javascript(render @task) %>" );
		$('#task_<%=@task.id%>').show().effect("highlight", {}, 2000);
	<% end %>
	$('#task_errors').html("");
<% end %>
<% flash.discard %>