<%= title "Dashboard" %>

<%= content_for :javascripts do %>
<% end %>

<%= content_for :page_content do %>

	<div class="page_heading blue">
		<h1>Latest Stats</h1>
	</div>
	
	<div class="page_content">
		
		<div class="count_sections">
			<div>
				<h2><%= @counts_by_transfer %></h2>
				<p>Total Completed Transfers</p>
			</div>
		</div>

		<h2>Counts by Animal Status - Lifetime Totals</h2>
		
		<div class="counts_by_status_list">
			<% @counts_by_status.map do |status, count| %>
				<div class="counts_by_status">
					<span class="status"><%= status %></span>
					<span class="count"><%= count %></span>
				</div>
			<% end %>
		</div>
		
		<h2>Shelter Counts</h2>
		
		<div class="count_sections">
			<div>
				<h2><%=@no_kill_shelters_count%></h2>
				<p>Total No-Kill Shelters</p>
			</div>
			<div>
				<h2><%=@kill_shelters_count%></h2>
				<p>Total Kill Shelters</p>
			</div>
			<div>
				<h2><%=@all_shelters_count%></h2>
				<p>Total Shelters</p>
			</div>
		</div>
		
		<div class="shelters_section">
			<h2>Latest Shelters</h2>
			<div id="latest_shelters" class="shelter_list"><%= render @latest_shelters %></div>
		</div>
		
	</div>
		
<% end %>

