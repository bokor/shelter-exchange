<%= title "Adoptions Monthly Total - Reports"  %>

<%= content_for :javascripts do %>
	<script type="text/javascript">
		$(function() {
			Reports.barChart('Adoptions Monthly Total', 'adoptions_monthly_total', 'Adoptions');
		});
	</script>
<% end %>

<%= content_for :page_content do %>

	<div class="page_heading blue">
		<h1>Reports</h1>
		<div class="action_links">
			<%= label_tag :selected_year, "Select year" %>
			<%= select_year(Date.today, {:field_name => :selected_year, :prefix => "", :start_year => current_year - 3, :end_year => current_year}, {:onchange => "Reports.barChart('Adoptions Monthly Total', 'adoptions_monthly_total', 'Adoptions');"})%>
		</div>
	</div>

	<div class="page_content">
		<div id="adoptions_monthly_total" class="report"></div>
	</div>

<% end %>

<%= content_for :sidebar do %>
	<%= render "sidebar" %>
<% end %>
