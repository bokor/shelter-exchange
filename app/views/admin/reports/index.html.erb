<%= title "Reports"  %>

<%= content_for :javascripts do %>
	<%= include_javascripts :reports1 %>
	<script type="text/javascript" charset="utf-8">
		$(function() {
			Reports.initialize();
		});
	</script>
<% end %>

<%= content_for :page_content do %>

	<div class="page_heading blue">
		<h1>Reports</h1>
		<div class="action_links">
			<%= label_tag :report_selected_month, "Select month:" %>
			<%= select_month(Date.today, :field_name => :report_selected_month, :start_month => current_month )%>
			
			<%= label_tag :report_selected_year, "Select year:" %>
			<%= select_year(Date.today, :field_name => :report_selected_year, :start_year => current_year - 3, :end_year => current_year)%>
			
			<%= submit_tag "Go", :disable_with => '...', :id => "submit_report" %>
		</div>
	</div>
	
	<div class="page_content">
	
		<div id="status_by_month_year" class="report"></div>
	
	</div>

<% end %>

