<%= title "Reports"  %>

<%= content_for :javascripts do %>
	<%= include_javascripts :reports %>
	<script type="text/javascript" charset="utf-8">
		$(function() {
			Reports.initialize();
		});
	</script>
<% end %>

<%= content_for :page_content do %>

	<div class="page_heading blue">
		<h1>Reports</h1>
		<div class="action_links">
			<%= label_tag :report_selected_state, "Select State:" %>
			<%= select :report, :selected_state, US_STATES.map {|k,v| [ v, k ] }, {:prompt => "All"}, {:onchange => ""}  %>
			
			<%= label_tag :date_report_selected_month, "Select month:" %>
			<%= select_month(Date.today, {:field_name => :report_selected_month, :start_month => current_month},{:onchange => ""} )%>
			
			<%= label_tag :date_report_selected_year, "Select year:" %>
			<%= select_year(Date.today, {:field_name => :report_selected_year, :start_year => current_year - 3, :end_year => current_year},{:onchange => ""})%>
			
			<%= submit_tag "Go", :disable_with => '...', :id => "submit_report" %>
		</div>
	</div>
	
	<div class="page_content">
	
		<div id="status_by_month_year" class="report"></div>
		<div class="separator"></div>
		<div id="type_by_month_year" class="report"></div>
	
	</div>

<% end %>

<%= content_for :sidebar do %>
	<%= render "sidebar" %>
<% end %>