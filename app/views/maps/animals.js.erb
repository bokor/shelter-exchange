<% unless @all_animals.blank? %>
	$('#all_animals').html( "<%= escape_javascript( render 'animals/animal_list', :animals => @all_animals) %>" );
<% else %>
	$('#all_animals').html( "<div class='no_results'><h2>No Animals found</h2></div>" );
<% end %>

