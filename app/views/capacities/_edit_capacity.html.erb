<div class="edit_capacity" id="edit_capacity_<%=@capacity.id %>">
	<h2>Update capacity</h2>
	<div id="edit_capacity_errors_<%= @capacity.id %>"></div>
	<%= form_for (@capacity), :remote => true, :html => { :id => "edit_capacity_form_#{@capacity.id}", :class => "edit_capacity_form" } do |f| %>
		<ul>
			<%= render "form", :f => f  %>
	    	<li class="buttons">
				<%= f.submit "Update Capacity", :disable_with => "Submitting...", :class => "button" %>
				&nbsp;&nbsp;or&nbsp;&nbsp;
				<%= link_to 'Cancel', '#', :onclick => "Capacities.cancelForm(#{@capacity.id});return false;"  %>
			</li>
		</ul>
	<% end %>
</div>