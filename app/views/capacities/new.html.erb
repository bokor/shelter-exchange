<%= title "Create your first capacity" %>

<%= content_for :javascripts do %>
	<%= javascript_include_tag "capacities/capacities", :cache => "cache/application/capacities-new" %>
<% end %>

<%= content_for :page_content do %>

	<div class="page_heading">
		<h1>Create your first capacity</h1>
		<p>BLAH BLAH BLAH</p>
	</div>

	<div class="page_content">
		<%= render "global/error_messages", :target => @capacity %>
		<div id="create_capacity">
			<%= form_for(@capacity), :html => { :id => "create_capacity_form", :class => "create_capacity_form" } do |f| %>
				<ul>
					<%= render "form", :f => f  %>
		    		<li class="buttons">
						<%= f.submit "Create Capacity", :disable_with => "Submitting...", :class => 'button' %>
					</li>
				</ul>
			<% end %>
		</div>	
		
	</div>

<% end %>

