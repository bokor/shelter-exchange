<% if @transfer.errors.any? %>
	$('#create_transfer_errors').html( "<%= escape_javascript(render 'shared/error_messages', :target => @transfer) %>" );
	<%= render 'shared/ajax_form_errors', :target => @transfer, :form_id => "create_transfer_form" %>
<% else %>

	// Hide Form, Buttons, and Show Request Message
	$('#transfer_request_button').hide();
	$('#create_transfer').slideToggle(1000);
	$('#transfer_requested').fadeIn(2000).removeClass("hide");

	// Clear Form
	$('#create_transfer_form').get(0).reset();

	// Remove Errors
	$('#create_transfer_errors').html("");
	$('#create_transfer_form p.error').remove();
	$('#create_transfer_form li').removeClass("error");

  // Google Analytics
  if (typeof(_gaq) != "undefined") {  _gaq.push(['_trackPageview', "/transfers/{id}/new"]); }

<% end %>
<% flash.discard %>
