<% if @transfer.errors.any? %>
	$('#edit_transfer_errors_<%=@transfer.id%>').html( "<%= escape_javascript(render 'shared/error_messages', :target => @transfer) %>" );
	<%= render 'shared/ajax_form_errors', :target => @transfer, :form_id => "edit_transfer_form_#{@transfer.id}" %>
<% else %>

	//Display Flash Messages
	$('#flash_messages').html("<%= escape_javascript(render 'shared/flash_messages', :target => flash) %>" );

	//Remove Edit Transfer
	$('#edit_transfer_<%= @transfer.id %>').fadeOut(1000, function() { 
		$(this).remove(); 
	});

	//Check transfer status
	<% if @transfer.approved? %>
		$('#transfer_<%= @transfer.id %>').replaceWith( "<%= escape_javascript(render @transfer) %>" );
		$('#transfer_<%= @transfer.id %>').show().effect("highlight", {}, 1000);
	<% elsif @transfer.completed? or @transfer.rejected? %>
		$('#transfer_<%= @transfer.id %>').fadeOut(1000, function() { 
			$(this).remove(); 
		});
	<% end %>
	
<% end %>
// Discard Flash Message
<% flash.discard %>
