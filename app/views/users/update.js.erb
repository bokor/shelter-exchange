<% if @user.errors.any? %>
	// Display Errors
	$('#update_user_errors').html("<%= escape_javascript(render 'global/error_messages', :target => @user) %>" );
<% else %>
	// Display Flash Message
	$('#flash_messages').html("<%= escape_javascript(render 'global/flash_messages', :target => flash) %>" );
	// Refresh User Details
	$('#user_<%=@user.id%>').replaceWith( "<%= escape_javascript( render @user ) %>" );
	$('#user_details').html( "<%= escape_javascript( render 'user_details', :user => @user ) %>" );
<% end %>
// Discard Flash Message
<% flash.discard %>