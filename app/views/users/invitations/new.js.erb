// Only Implemented the User error part as it will forward the request to the users/index.js file when it is successful
<% if @user.errors.any? %>
	$('#new_invitation_errors').html("<%= escape_javascript(render 'global/error_messages', :target => @user) %>" );
	<%= render 'global/ajax_form_errors', :target => @user, :form_id => "new_invitation_form" %>
<% end %>
// Discard Flash Message
<% flash.discard %>

