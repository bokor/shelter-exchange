<li id="user_<%=user.id%>" class="user <%= "current" if current_user == user %>" onclick="Users.selectUser(<%=user.id%>);">
	<div class="username">
		<%= user.name %>
		<% if user.role == "owner" %><span class="owner"><%= user.role.humanize %></span><% end %>
	</div>
	<span class="email"><%= user.email %></span>
</li>
