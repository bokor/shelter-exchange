<% if @user.errors.any? %>
	// Display Errors
	$('#change_password_errors').html("<%= escape_javascript(render 'shared/error_messages', :target => @user) %>" );
	<%= render 'shared/ajax_form_errors', :target => @user, :form_id => "change_password_form_#{@user.id}" %>
<% else %>
	// Display Flash Message
	$('#flash_messages').html("<%= escape_javascript(render 'shared/flash_messages', :target => flash) %>" );
	// Reset Form
	$('#change_password_user_<%=@user.id%>').get(0).reset();
	$('#change_password_errors').html("");
<% end %>
// Discard Flash Message
<% flash.discard %>