<% if @user.errors.any? %>
	$('#change_password_errors').html("<%= escape_javascript(render 'global/error_messages', :target => @user) %>" );
<% else %>
	$('#flash_messages').html("<%= escape_javascript(render 'global/flash_messages', :target => flash) %>" );
	$('#change_password form').get(0).reset();
	$('#change_password_errors').html("");
<% end %>

<% flash.discard %>