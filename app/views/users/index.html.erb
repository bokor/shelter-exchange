<%= title "Manage Users" %>

<%= content_for :javascripts do %>
	<%= javascript_include_tag "users/users", :cache => "cache/application/users-index" %>
<% end %>

<%= content_for :page_content do %>

	<div class="page_heading blue_background">
		<h1>Manage Users</h1>
	</div>
		
	<div class="page_content">
		
		<div class="manage_users">
			<div class="action_links">
				<%= link_to "Invite new user", "#", :onclick => "$('#new_invitation').slideToggle(1000);" %><br /><br />
				<div id="new_invitation" style="display:none;">
					<div id="new_invitation_errors"></div>
					<%= render "form_invitation" %>
				</div>
			</div>
			<div id="users_section">
				<div class="count">Users(<%= @users.count %>)</div>
				<div id="users">
					<%= render "user_list" %>
				</div>
			</div>
			<div id="user_details">
				<%= render :partial => "user_details", :locals => { :user => current_user } %>
			</div>
		</div>
		
	</div>
	
<% end %>

<%= content_for :sidebar do %>
<% end %>