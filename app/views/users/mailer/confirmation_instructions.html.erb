<%
	subdomain = @resource.account.subdomain
	subdomain = (subdomain || "")
	subdomain += "." unless subdomain.empty?
	host = [subdomain, ActionMailer::Base::default_url_options[:host]].join
%>
<p>Welcome <%= @resource.email %>!</p>

<p>You can confirm your account through the link below:</p>


<p><%= link_to 'Confirm my account', confirmation_url(@resource, :host => host, :confirmation_token => @resource.confirmation_token) %></p>

