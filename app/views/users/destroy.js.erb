// Display Flash Message
$('#flash_messages').html("<%= escape_javascript(render 'shared/flash_messages', :target => flash) %>" );

// Remove Old User
$('#user_<%=@user.id%>').fadeOut(1500, function() {
	$(this).remove();
});

// Discard Flash Message
<% flash.discard %>

// Google Analytics
if (typeof(_gaq) != "undefined") {  _gaq.push(['_trackPageview', "/users/{id}/destroy"]); }

