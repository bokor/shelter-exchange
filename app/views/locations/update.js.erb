<% if @location.errors.any? %>
	$('#edit_location_errors_<%=@location.id%>').html( "<%= escape_javascript(render 'global/error_messages', :target => @location) %>" );
	<%= render 'global/ajax_form_errors', :target => @location, :form_id => "edit_location_form_#{@location.id}" %>
<% else %>
	$('#edit_location_<%=@location.id%>').slideToggle(1000, function() { 
		$(this).remove(); 
	});
	$('#location_<%=@location.id%>').replaceWith( "<%= escape_javascript(render @location) %>" );
	$('#location_<%=@location.id%>').show().effect("highlight", {}, 2000);
	$('#location_errors').html("");
<% end %>
<% flash.discard %>