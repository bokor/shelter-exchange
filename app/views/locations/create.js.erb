<% if @location.errors.any? %>
	$('#create_location_errors').html( "<%= escape_javascript(render 'global/error_messages', :target => @location) %>" );
	<%= render 'global/ajax_form_errors', :target => @location, :form_id => "create_location_form" %>
<% else %>
	// Add Location
	$('#locations').prepend("<%= escape_javascript(render @location) %>"); 
	$(".location").first().effect("highlight", {}, 1000);
	$('#new_location').get(0).reset();
	$('#location_errors').html("");
<% end %>
<% flash.discard %>