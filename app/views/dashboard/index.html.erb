<%= title "Dashboard" %>

<%= content_for :javascripts do %>
<% end %>

<%= content_for :page_content do %>

	<div class="page_heading blue">
		<h1>Latest Activity</h1>
	</div>
	
	<div class="page_content">
	
		<div id="activities" class="activity_list">
			<% unless @latest_activity.blank? %>
				<% @latest_activity.each do |activity| %>
					<div class="activity">
						<span class="type">
							<img class="tooltip" data-tip="<%=activity.class.name%>" src="/images/icon_<%= activity.class.name.downcase %>.png" />
						</span>
						<span class="details">
							<span class="title"><%= activity_message_for(activity)  %></span>
						</span>
						<span class="created_at_date"><%= format_date(:short_full_year, activity.updated_at) %></span>
					</div>
				<% end %>
			<% else %>
				<div class="no activity">
					<span class="details">
						<span class="title">No current activity</span>
					</span>
				</div>
			<% end %>
		</div>
		
	</div>
		
<% end %>

<%= content_for :sidebar do %>
	<h2>Transfer Requests</h2>
	<div id="transfers">
		<%= render "transfers/transfer_list", :transfers => @transfers %>
	</div>
<% end %>

