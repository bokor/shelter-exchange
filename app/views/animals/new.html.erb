<%= title "Create a new animal" %>

<%= content_for :javascripts do %>
	<% if @current_shelter.is_kill_shelter %>
		<%= javascript_include_tag "animals/animals", "date", "animals/date_info", "accommodations/accommodations", :cache => "cache/application/animals-edit" %>
	<% else %>
		<%= javascript_include_tag "animals/animals", "accommodations/accommodations", :cache => "cache/application/animals-edit" %>
	<% end %>
<% end %>

<%= content_for :page_content do %>

	<div class="page_heading blue_background">
		<h1>Create a new animal</h1>
	</div>
	<div class="page_content">
		<%= render "global/error_messages", :target => @animal %>
		<%= render "form", :button_text => "Create Animal" %>
	</div>	
<% end %>

