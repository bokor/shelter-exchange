<%= title "Editing animal - #{@animal.name}" %>

<%= content_for :javascripts do %>
	<script type="text/javascript">
		$(function() {
			Animals.formInitialize(<%=@current_shelter.kill_shelter?%>, <%=@animal.errors[:status_history_reason].any?%>, <%= @animal.new_record? ? 0 : @animal.animal_status_id_was %>);
		});
	</script>
<% end %>

<%= content_for :page_content do %>
	
	<div class="page_heading blue">
		<h1>Editing animal: <%= @animal.name %></h1>
	</div>
	
	<div class="page_content">
		<%= render "shared/error_messages", :target => @animal %>
		<%= render "form", :button_text => "Update Animal" %>
	</div>
	
<% end %>

