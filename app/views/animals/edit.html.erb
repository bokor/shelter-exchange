<%= title "Editing animal - #{@animal.name}" %>

<%= content_for :javascripts do %>
	<% if @current_shelter.is_kill_shelter %>
		<%= javascript_include_tag "animals/animals", "date", "accommodations/accommodations", :cache => "cache/application/animals-edit" %>
	<% else %>
		<%= javascript_include_tag "animals/animals", "accommodations/accommodations", :cache => "cache/application/animals-edit" %>
	<% end %>
	<script type="text/javascript">
		$(function() {
			Animals.formInitialize(<%=@current_shelter.is_kill_shelter%>, <%=@animal.errors[:status_history_reason].any?%>, <%= @animal.new_record? ? 0 : @animal.animal_status_id_was %>);
		});
	</script>
<% end %>

<%= content_for :page_content do %>
	
	<div class="page_heading blue">
		<h1>Editing animal: <%= @animal.name %></h1>
	</div>
	
	<div class="page_content">
		<%= render "global/error_messages", :target => @animal %>
		<%= render "form", :button_text => "Update Animal" %>
	</div>
	
<% end %>

<%= content_for :sidebar do %>
<% end %>
