<% if @animal.errors.any? %>
    $('#transfer_animal_errors').html( "<%= escape_javascript(render 'shared/error_messages', :target => @animal) %>" );
	  <%= render 'shared/ajax_form_errors', :target => @animal, :form_id => "transfer_animal_form" %>
<% else %>
	  // Clear Form
	  $('#transfer_animal_form').get(0).reset();

	  // Remove Errors
	  $('#transfer_animal_errors').html("");
	  $('#transfer_animal_form p.error').remove();
    $('#transfer_animal_form li').removeClass("error");

    // Google Anayltics
    <% if Rails.env.production? %>
      _gaq.push(['_trackPageview', "/animals/{id}/transfer"]);
    <% end %>

    // Redirect to the animal page for a full refresh.
    window.location.href = '<%=animal_path(@animal)%>'
<% end %>

// Discard Flash Message
<% flash.discard %>

