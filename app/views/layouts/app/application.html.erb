<!DOCTYPE html>
<!--[if lt IE 7 ]> <html lang="<%= ::I18n.locale %>" class="no-js ie ie6"> <![endif]-->
<!--[if IE 7 ]>    <html lang="<%= ::I18n.locale %>" class="no-js ie ie7"> <![endif]-->
<!--[if IE 8 ]>    <html lang="<%= ::I18n.locale %>" class="no-js ie ie8"> <![endif]-->
<!--[if IE 9 ]>    <html lang="<%= ::I18n.locale %>" class="no-js ie ie9"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html lang="<%= ::I18n.locale %>" class="no-js"> <!--<![endif]-->
<head>

	<!-- title -->
	<title><%= yield(:title) %> | Shelter Exchange</title>
	<!-- metatags -->
  <meta charset="utf-8">

  <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">

	<!-- icons -->
	<%= favicon_link_tag 'favicon.ico' %>
	<%= favicon_link_tag 'shelterexchange_icon_128x128.png', :rel => 'apple-touch-icon-precomposed', :type => 'image/png' %>

	<!-- stylesheets -->
  <%= stylesheet_link_tag :application, :media => "all" %>

	<!-- javascripts -->
	<%= javascript_include_tag :application %>

	<!--[if (gte IE 6)&(lte IE 8)]>
		<%= javascript_include_tag :selectivizr %>
	<![endif]-->

	<!--[if (lt IE 9)]>
		<%= javascript_include_tag :html5 %>
	<![endif]-->

	<%= yield(:javascripts) %>

	<%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>_<%= controller_name %>">

	<div id="fb-root"></div>

	<%= render :partial => "shared/ie6_warning" %>
	<%= render :partial => "shared/header" %>

	<div id="main">

		<%= render :partial => "shared/flash_messages" %>
		<%= render :partial => "shared/announcements" %>

		<div id="left">

			<div id="content">
				<% if content_for?(:page_content) %>
			  		<%= yield(:page_content) %>
				<% end %>
			</div>
			<!--//end screen -->

			<%= render :partial => "shared/footer" %>

		</div>
		<!--//end left -->

		<div id="right">

			<div id="sidebar">
				<% if content_for?(:sidebar) %>
			  		<%= yield(:sidebar) %>
				<% end %>
			</div>
			<!--//end sidebar -->

		</div>
		<!--//end right -->

	</div>
	<!--//end main -->

</body>

</html>
