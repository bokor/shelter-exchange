<!DOCTYPE html>
<html>
<head>
  
	<!-- title -->
	<title><%= yield(:title) %> - Shelter Exchange</title>
	
	<!-- icons -->
	<link rel="shortcut icon" type="image/x-icon" href="favicon.ico">
	<link rel="apple-touch-icon-precomposed" href="/shelterexchange-icon.png" />
	
	<!-- stylesheets -->
	<%= include_stylesheets :app_login, :media => "all" %>
	
	<!-- javascripts -->
	<%= include_javascripts :app %>
	<%= yield(:javascripts) %>
		
		
	<%= csrf_meta_tag %>

</head>
<body class="<%= controller_name %> <%= action_name %>_<%= controller_name %>">
	
	<div id="main">
		
		<div id="logo"><%= image_tag("logo_centered.png") %></div>
		
		<div id="flash_messages"><%= render :partial => "shared/flash_messages" %></div>
		
		<div id="center">
			
			<div id="content">
				<% if content_for?(:page_content) %>
			  		<%= yield(:page_content) %>
				<% end %>
			</div>
			<!--//end screen -->
			
		</div>
		<!--//end left -->
		
	</div>
	<!--//end main -->
	
</body>

</html>
