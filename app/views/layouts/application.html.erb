<!DOCTYPE html>
<html>
<head>
  
	<title><%= yield(:title) %> - Shelter Exchange</title>
  
 	<%= stylesheet_link_tag "application/application", "application/controller", "application/jquery-ui-1.8.6.custom", 
                            :media => "all", :cache => "cache/application/all" %>

    <%= stylesheet_link_tag "application/print", 
							:media => "print", :cache => "cache/application/print" %>
	<%= yield(:stylesheets) %>
	
	<!-- MOVE TO THE BOTTOM -->
	<%= javascript_include_tag "jquery-1.4.2.min", "jquery-ui-1.8.6.custom.min", 
							   "jquery.ui.autocomplete.ext", "jquery.jtruncate","jquery.tokeninput", "top_up-min",
							   "rails", "application", :cache => "cache/application/all" %> <!-- jquery.tipTip.minified -->
	<%= yield(:javascripts) %>
		
	<%= csrf_meta_tag %>

</head>
<body class="<%= controller_name %> <%= action_name %>_<%= controller_name %>">
	
	<%= render :partial => "global/header" %>
	
	<div id="main">
		
		<%= render :partial => "global/flash_messages" %>
		
		<div id="left">
			
			<div id="content">
				<% if content_for?(:page_content) %>
			  		<%= yield(:page_content) %>
				<% end %>
			</div>
			<!--//end screen -->
			
			<%= render :partial => "global/footer" %>
			
		</div>
		<!--//end left -->
		
		<div id="right">
			
			<div id="sidebar">
				<% if content_for?(:sidebar) %>
			  		<%= yield(:sidebar) %>
				<% end %>
			</div>
			<!--//end sidebar -->
			
		</div>
		<!--//end right -->
		
	</div>
	<!--//end main -->
	
</body>

</html>
