<!DOCTYPE html>
<html>
<head>
	
	<%= render :partial => "public/shared/seo" %>
	
	<!-- icons -->
	<link rel="shortcut icon" type="image/x-icon" href="favicon.ico">
	<link rel="apple-touch-icon-precomposed" href="/shelterexchange-icon.png" />

	<!-- stylesheets -->
	<%= include_stylesheets :public, :media => "all" %>
	<%= include_stylesheets :public_print, :media => "print" %>
	
	<!-- javascript -->
	<%= include_javascripts :public %>
	<%= yield(:javascripts) %>
	
	<!--[if lt IE 9]>
		<%= javascript_include_tag "global/selectivizr-min" %>
	<![endif]-->
	
	
	<%= csrf_meta_tag %>

</head>
<body class="<%= controller_name %> <%= action_name %>_<%= controller_name %> <%= page_name %>">
	
	<div id="page">
	
		<%= render :partial => "public/shared/toolbar" %>

		<%= render :partial => "public/shared/header" %>
	
		<!-- <div style="width: 100%; height: 60px; line-height: 60px;"><div class="content"><h1 style="color:#CD6E18;">Saving lives</h1></div></div> -->
	
		<div id="main">
			<div class="content">
				<%= yield(:page_content) if content_for?(:page_content) %>
			</div>
		</div>
	
		<%= render :partial => "public/shared/footer" %>
	
	</div>
	
	<%= render :partial => "public/shared/analytics" %>
	
</body>

</html>
