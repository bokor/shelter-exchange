<!DOCTYPE html>
<html>
<head>
  
	<title><%= yield(:title) %> - Shelter Exchange</title>
  
 	<%= stylesheet_link_tag "global/jquery-ui.custom", "global/wufoo_form",
							"public/common", "public/controller",
                            :media => "all", :cache => "cache/public/all" %>

    <%= stylesheet_link_tag "public/print", 
                            :media => "print", :cache => "cache/public/print" %>
	<%= yield(:stylesheets) %>
	
	
	<%= javascript_include_tag "global/jquery.min", "global/jquery-ui.min", "global/jquery.ui.autocomplete.ext", 
							   "global/jquery.blockUI.min", "global/modernizr", "global/forms",
							   "global/jquery_ujs", "public/application",
							   :cache => "cache/public/all" %> 
	<%= yield(:javascripts) %>
	
	<!--[if lt IE 9]>
		<%= javascript_include_tag "global/selectivizr-min" %>
	<![endif]-->
	
	<%= csrf_meta_tag %>

</head>
<body class="<%= controller_name %> <%= action_name %>_<%= controller_name %>">
	
	<div id="main">
		
		<div id="left">
			
			<div id="content">
				<% if content_for?(:page_content) %>
			  		<%= yield(:page_content) %>
				<% end %>
			</div>
			<!--//end screen -->
			
			<%= render :partial => "global/footer" %>
			
		</div>
		<!--//end left -->
		
		<div id="right">
			
			<div id="sidebar">
				<% if content_for?(:sidebar) %>
			  		<%= yield(:sidebar) %>
				<% end %>
			</div>
			<!--//end sidebar -->
			
		</div>
		<!--//end right -->
		
	</div>
	<!--//end main -->
	
</body>

</html>
