<!DOCTYPE html>
<html>
<head>
  
	<title><%= yield(:title) %> - Shelter Exchange</title>
  
 	<%= stylesheet_link_tag "global/jquery-ui.custom", 
							"api/common", "api/controller",
							:media => "all", :cache => "cache/api/all" %>
	<%= yield(:stylesheets) %>
	
	<%= javascript_include_tag "global/jquery.min", "global/jquery-ui.min", "global/jquery.blockUI.min", 
							   "global/modernizr", "global/jquery_ujs", "api/application",
							   :cache => "cache/api/all" %>

	<%= yield(:javascripts) %>
	
	<!--[if lt IE 9]>
		<%= javascript_include_tag "global/selectivizr-min" %>
	<![endif]-->
	
		
	<%= csrf_meta_tag %>

</head>
<body class="<%= controller_name %> <%= action_name %>_<%= controller_name %>">

	<div id="main">
		
		<div id="content">
			<% if content_for?(:page_content) %>
			  	<%= yield(:page_content) %>
			<% end %>
		</div>
		<!--//end screen -->
			
		<%= render :partial => "global/footer" %>	
		
	</div>
	<!--//end main -->
	
</body>

</html>
