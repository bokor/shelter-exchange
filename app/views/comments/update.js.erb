<% if @comment.errors.any? %>
	$('#edit_comment_errors_<%=@comment.id %>').html( "<%= escape_javascript(render 'global/error_messages', :target => @comment) %>" );
	<%= render 'global/ajax_form_errors', :target => @comment, :form_id => "edit_comment_form_#{@comment.id}" %>	
<% else %>
	$('#edit_comment_<%=@comment.id%>').slideToggle(1000, function() { 
		$(this).remove(); 
	});
	$('#comment_<%=@comment.id%>').replaceWith( "<%= escape_javascript(render @comment) %>" );
	$('#comment_<%=@comment.id%>').show().effect("highlight", {}, 2000);
	
	// Remove Errors
	$('#edit_comment_errors_<%=@comment.id %>').html("");
	$('#edit_comment_form_<%=@comment.id %> p.error').remove();
	$('#edit_comment_form_<%=@comment.id %> li').removeClass("error");
<% end %>
<% flash.discard %>

