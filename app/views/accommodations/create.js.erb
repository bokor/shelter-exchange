<% if @accommodation.errors.any? %>
	$('#create_accommodation_errors').html( "<%= escape_javascript(render 'global/error_messages', :target => @accommodation) %>" );
	<%= render 'global/ajax_form_errors', :target => @accommodation, :form_id => "create_accommodation_form" %>
<% else %>
	// Add Location
	$('#accommodations').prepend("<%= escape_javascript(render @accommodation) %>"); 
	$(".accommodation").first().effect("highlight", {}, 1000);
	$('#create_accommodation_form').get(0).reset();
	$('#create_accommodation_errors').html("");
<% end %>
<% flash.discard %>