<% if @accommodation.errors.any? %>
	$('#edit_accommodation_errors_<%=@accommodation.id %>').html( "<%= escape_javascript(render 'global/error_messages', :target => @accommodation) %>" );
	<%= render 'global/ajax_form_errors', :target => @accommodation, :form_id => "edit_accommodation_form_#{@accommodation.id}" %>	
<% else %>
	//Update Location
	$('#edit_accommodation_<%=@accommodation.id%>').slideToggle(800, function() { 
		$(this).remove(); 
	});
	$('#accommodation_<%=@accommodation.id%>').replaceWith( "<%= escape_javascript(render @accommodation) %>" );
	$('#accommodation_<%=@accommodation.id%>').fadeIn(1000).effect("highlight", {}, 1000);
	$('#edit_accommodation_errors_<%=@accommodation.id %>').html("");
<% end %>
<% flash.discard %>