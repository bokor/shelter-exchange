<tr class="edit_placement" id="edit_placement_<%=@placement.id %>">
	<td colspan="3">
	<h2>Update placement</h2>
	<%= form_for (@placement), :remote => true, :html => { :id => "edit_placement_form", :class => "edit_placement_form"} do |f| %>
		<ul class="form">
			<li>
				<%= f.label :comment, "Comment" %><br />
				<%= f.text_area :comment %>
			</li>
		</ul>
		<div class="actions">
			<%= f.submit "Update placement", :disable_with => "Submitting...", :class => "button" %>
			&nbsp;&nbsp;or&nbsp;&nbsp;
			<%= link_to 'Cancel', '#', :onclick => "$('#placement_#{@placement.id}').slideToggle(800,function() {$(this).remove();});$('#placement_#{@placement.id}').fadeIn(1000);"  %>
		</div>
	<% end %>
	</td>
</tr>