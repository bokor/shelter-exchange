<% if @placement.errors.any? %>
	$('#placement_errors').html( "<%= escape_javascript(render 'global/error_messages', :target => @placement) %>" );
<% else %>
	$('#placement_<%=@placement.placement_type %> table').prepend("<%= escape_javascript(render @placement) %>"); 
	$("#placement_<%=@placement.placement_type %> .placement").first().effect("highlight", {}, 1000);
	// Reset Form
	$('#new_placement').get(0).reset();
	$('#animal_selected span').html('');
	$('#animal_search_link').html("Find animal");
	$('#placement_animal_id').val("");
	// Clear Errors
	$('#placement_errors').html("");
<% end %>
<% flash.discard %>