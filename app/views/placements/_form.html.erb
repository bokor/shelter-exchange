<li>
	<%= f.label :status, "What type of placement? <span class='req'>*</span>".html_safe, :class => "desc" %>
	<div id="placement_status">
		<% Placement::STATUS.each do |status| %>
			<span>
				<%= f.radio_button :status, status, :class => "field radio" %>
				<%= f.label "status_#{status}", status.humanize, :class => "choice" %>
			</span>
		<% end %>
	</div>
	<%= has_error_message?(@parent, :status)%>
</li>
<%= f.fields_for :comments, @comment do |comment_fields| %>
	<li>
		<%= comment_fields.label :comment, "Comment", :class => "desc" %>
		<div><%= comment_fields.text_area :comment, :class => "field textarea medium" %></div>
	</li>
	<%= comment_fields.hidden_field :shelter_id, :value => @current_shelter.id %>
<% end %>
<%= f.hidden_field :parent_id, :value => @parent.id %>

