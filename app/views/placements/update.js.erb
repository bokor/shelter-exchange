<% if @placement.errors.any? %>
	$('#edit_placement_errors_<%=@placement.id %>').html( "<%= escape_javascript(render 'global/error_messages', :target => @placement) %>" );
	<%= render 'global/ajax_form_errors', :target => @placement, :form_id => "edit_placement_form_#{@placement.id}" %>	
<% else %>
	$('#edit_placement_<%=@placement.id%>').slideToggle(1000, function() { 
		$(this).remove(); 
	});
	$('#placement_<%=@placement.id%>').replaceWith( "<%= escape_javascript(render @placement) %>" );
	$('#placement_<%=@placement.id%>').show().effect("highlight", {}, 1000);

	// Remove Errors
	$('#edit_placement_errors_<%=@placement.id %>').html("");
	$('#edit_placement_form_<%=@placement.id %> p.error').remove();
	$('#edit_placement_form_<%=@placement.id %> li').removeClass("error");
<% end %>
<% flash.discard %>