<%= title "#{@shelter.name}" %>

<%= content_for :javascripts do %>
	<%= javascript_include_tag "shelters/shelters", "http://maps.google.com/maps/api/js?sensor=false", :cache => "cache/application/shelters-index" %>
	<script type="text/javascript">
		$(function() {
			Shelters.loadMap(<%=@shelter.lat%>, <%=@shelter.lng%>);
		});
	</script>
<% end %>


<%= content_for :page_content do %>

	<div class="page_heading blue_background">
		
		<% if @shelter.logo.file? %>
			<div class="logo">
				<%= image_tag @shelter.logo.url(:small) %>
			</div>
		<% else %>
			<h1>Shelter</h1>
		<% end %>
		<div class="action_links">
			<%= link_to "Edit this shelter", edit_shelter_path(@shelter)%>
		</div>
	</div>
		
	<div class="page_content">
		
		<div class="shelter_details">
			<div id="address">
				<h3>Address:</h3>
				<ul>
					<li><%=@shelter.name%></li>
					<li><%=@shelter.street%></li>
					<li><%=@shelter.city%>, <%=@shelter.state%> <%=@shelter.zip_code%></li>
				</ul>
			</div>
			<div id="contact_details">
				<h3>Contact Details:</h3>
				<ul>
					<li>Main phone:  <%=@shelter.main_phone%></li>
					<li>Fax phone:  <%=@shelter.fax_phone%></li>
					<li>Email:  <%=@shelter.email %></li>
					<li>Website:  <%=@shelter.website%></li>
					<li>Twitter:  <%=@shelter.twitter%></li>
					<li>Facebook Page:  <%=@shelter.facebook %></li>
					<li>Kill shelter:  <%=@shelter.is_kill_shelter%></li>
				</ul>
			</div>
		</div>
		
		<div id="map_canvas"></div>
		<div id="map_content">
			<ul>
				<li><h2><%=@shelter.name%></h2></li>
				<li><%=@shelter.street%></li>
				<li><%=@shelter.city%>, <%=@shelter.state%> <%=@shelter.zip_code%><br /><br /></li>
			</ul>
		</div>
		
	</div>
	
<% end %>

<%= content_for :sidebar do %>
	
	<div id="items_section">
		<h2>Wish List <span class="actions">
			<%= link_to "Edit", edit_wish_list_path(@shelter), :remote => true %></span></h2>
		<p>BLAH BLAH</p>
		<ol id="items">
			<% unless @shelter.items.blank? %>
				<%= render @shelter.items %>
			<% else %>
				<p>Please enter the items you need the most</p>
			<% end %>
		</ol>
	</div>
	
	<div class="separator"></div>
	
	<div id="capacities_section">
		<h2>Shelter Capacity <span class="actions"><%= link_to "Add", "#", :id => "add_capacity_link", :class => "button" %></span></h2>
		<div id="create_capacity">
			<h2>Add a shelter capacity</h2>
			<div id="capacity_errors"></div>
			<%= form_for (Capacity.new), :remote => true do |f| %>
				<%= render :partial => "capacities/form", :locals => { :f => f } %>
			    <div class="actions">
					<%= f.submit "Create Capacity", :disable_with => "Submitting...", :id => "create_capacity_button", :class => "button"  %>
					&nbsp;or&nbsp;<%= link_to "Cancel", "#", :id => "cancel_capacity" %>
				</div>
			<% end %>
		</div>
		<p>BLAH BLAH</p>
		<div id="capacities" class="capacity_list">
			<% unless @shelter.capacities.blank? %>
				<%= render @shelter.capacities%>
			<% else %>
				<p id="capacity_help">Please enter the shelter capacity</p>
			<% end %>
		</div>
	</div>
	
	
<% end %>