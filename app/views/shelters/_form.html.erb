<%= form_for (@shelter), :html => { :multipart => true } do |f| %>
	<ul class="form">
		<li style="float:right; width:42%">
			<% if @shelter.logo.file? %>
				<%= image_tag @shelter.logo.url(:small) %><br />
				<%= f.check_box :logo_delete %><%= f.label :logo_delete, "Remove Logo" %><br />
			<% else %>
				<%= f.label :logo, "Upload image" %><br />
				<%= f.file_field :logo  %>
			<% end %>
		</li>
		<li>
			<%= f.label :name, "Name" %><br />
			<%= f.text_field :name %>
		</li>
		<li>
			<%= f.label :street, "Street" %><br />
			<%= f.text_field :street %>
		</li>
		<li>
			<%= f.label :city, "City" %><br />
			<%= f.text_field :city %>
		</li>
		<li>
			<%= f.label :state, "State" %><br />
			<%= select :shelter, :state, US_STATES.map {|k,v| [ v, k ] }, {:prompt => "Select State"} %>
		</li>
		<li>
			<%= f.label :zip_code, "Zip code" %><br />
			<%= f.text_field :zip_code %>
		</li>
		<li>
			<%= f.label :main_phone, "Main phone" %><br />
			<%= f.text_field :main_phone %>
		</li>
		<li>
			<%= f.label :fax_phone, "Fax phone" %><br />
			<%= f.text_field :fax_phone %>
		</li>
		<li>
			<%= f.label :email, "Email" %><br />
			<%= f.text_field :email %>
		</li>
		<li>
			<%= f.label :website, "Website" %><br />
			<%= f.text_field :website %>
		</li>
		<li>
			<%= f.label :twitter, "Twitter" %><br />
			<%= f.text_field :twitter %>
		</li>
		<li>
			<%= f.label :facebook, "Facebook Page" %><br />
			<%= f.text_field :facebook %>
		</li>
		<li>
			<%= f.check_box :is_kill_shelter%>&nbsp;&nbsp;
			<%= f.label :is_kill_shelter, "Is kill shelter" %><br />
		</li>
		<li>
			<%# ActiveSupport::TimeZone.us_zones %>
			<%= f.label :time_zone, "Time Zone" %><br />
			<%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
		</li>
	</ul>
	<div class="actions">
		<%= f.submit button_text, :disable_with => "Submitting...", :class => 'button' %>
	</div>
<% end %>