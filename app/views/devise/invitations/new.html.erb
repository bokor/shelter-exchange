<%= title "Invite new user" %>

<% content_for :page_content do %>
	<div class="page_heading">
		<h2>Invite new user</h2>
	</div>
	<div class="page_content">
		<%= render "global/error_messages", :target => resource %>
			
		<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name) do |f| %>
  			<!-- <%= devise_error_messages! %> -->

			<%= f.hidden_field :subdomain, :value => @current_account.subdomain %>

  			<p><%= f.label :email %><br />
  			<%= f.text_field :email %></p>

  			<p><%= f.submit "Send an invitation", :disable_with => 'Submiting...' %></p>
		<% end %>

		<!-- <%= link_to "Home", after_sign_in_path_for(resource_name) %><br /> -->

	</div>
	
<% end %>

