<% if @note.errors.any? %>
	$('#note_errors').html( "<%= escape_javascript(render 'global/error_messages', :target => @note) %>" );
<% else %>
	$('#edit_note_<%=@note.id%>').slideToggle();
	$('#note_<%=@note.id%>').replaceWith( "<%= escape_javascript(render @note) %>" );
	$('#note_<%=@note.id%>').show().effect("highlight", {}, 2000);
<% end %>
<% flash.discard %>

