<% unless @note.errors.any? %>
	<% if session[:scope] == @note.note_category.name or session[:scope] == "All" or session[:scope].blank? %>
		$('#notes').prepend("<%= escape_javascript(render @note) %>"); 
		$(".note").first().effect("highlight", {}, 1000);
	<% else %>
		$("#another_note_category").html("<p>Added to Category: <%= @note.note_category.name%> <!--<a href='#' onclick='$(this).parent().hide();'>X</a>--></p>").show();
		$("#another_note_category").delay(1500).fadeOut();
	<% end %>
	$('#new_note').get(0).reset();
	
<% end %>