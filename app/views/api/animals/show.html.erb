<% social_url = www_url + public_save_a_life_path(@animal) %>

<%= title "#{@animal.name} - #{full_breed(@animal)} | #{@current_shelter.city}, #{@current_shelter.state}" %>
<%= description "#{@animal.name} is a #{@animal.sex.downcase} #{@animal.animal_type.name.downcase}, #{full_breed(@animal)}, located at #{@current_shelter.name} in #{@current_shelter.city}, #{@current_shelter.state}. #{@animal.description}" %>
<%= canonical_url social_url %>
<%= seo_location "#{@current_shelter.city}, #{@current_shelter.state}" %>
<%= seo_image "#{@animal.photo.url(:medium)}" %>

<%= content_for :javascripts do %>
	<script type="text/javascript">var switchTo5x=true;</script>
	<script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
	<script type="text/javascript">
		stLight.options({
			publisher:'d7bacbc7-2f1f-42dc-a606-db2a54f70db5',
			onhover: false
		});
	</script>
<% end %>

<%= content_for :page_content do %>
	<div class="page_heading gray">
		<table class="animal">
			<tr>
				<td>
					<h1><%= @animal.name %></h1>
				</td>
				<td class="action_links">
					<!-- Share This -->
					<span class='st_facebook' st_url="<%= social_url %>" displayText='Facebook'></span>
					<span class='st_twitter' st_url="<%= social_url %>" displayText='Tweet'></span>
					<span class='st_email' st_url="<%= social_url %>" displayText='Email'></span>
					<span class='st_sharethis' st_url="<%= social_url %>" displayText='ShareThis'></span>
					<!--// Share This -->
					<ul class="toggle_buttons">
						<li><%= link_to "Back to Results", url_for(:back) %></li>
					</ul>
				</td>
			</tr>
			<tr>
				<td>
					<p><%= @animal.animal_type.name %>:  <%= full_breed(@animal) %></p>
				</td>
				<td class="status">
					<p><%= @animal.animal_status.name %><%= adoption_date(@animal) %></p>
				</td>
			</tr>
		</table>
	</div>
	
	<div class="page_content">
		
		<% if @current_shelter.kill_shelter? and AnimalStatus::ACTIVE.include?(@animal.animal_status_id) %>
			<p class="euthanasia_info">Scheduled to be euthanized on <%= format_date(:long, @animal.euthanasia_date) %>.</p>
		<% end %>
		
		<table class="animal_details">
			<tr>
				<td class="metadata">
					<h3>Details:</h3>
					<ul> 
						<li><p><b>Weight:</b>  <%= @animal.weight.present? ? @animal.weight : "N/A" %></p></li>
						<li><p><b>Size:</b>  <%= @animal.size.present? ? @animal.size : "N/A" %></p></li>
						<li><p><b>Age (Est.):</b>  <%= @animal.date_of_birth.present? ? humanize_dob(@animal.date_of_birth) : "N/A" %></p></li>
						<li><p><b>Color:</b>  <%= @animal.color.present? ? @animal.color : "N/A" %></p></li>
						<li><p><b>Sex:</b>  <%= @animal.sex.humanize unless @animal.sex.blank? %> <% if @animal.is_sterilized %>(Sterilized)<% end %></p></li>
					</ul>

					<h3>Description:</h3>
					<p><%= @animal.description.blank? ? "No description provided" : @animal.description %></p>
				</td>
				<td class="image">
				    <%= image_tag @animal.photo.url(:medium) %>
				</td>
			</tr>
		</table>
		
		<div class="animal_shelter">
			<%= render 'shelter_details' %>
		</div>
		
	</div>

<% end %>
	
