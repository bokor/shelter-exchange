<tr id="<%= "animal_#{animal.id}" %>">
	<td class="image">
		<%= link_to image_tag(animal.photo.url(:thumb)), api_animal_path(animal, :access_token => @access_token)  %>
	</td>
	<td class="details">
		<h3><%= link_to animal.name, api_animal_path(animal, :access_token => @access_token) %></h3>		
		<p><%= full_breed(animal) %></p>
		<p><%= animal.animal_type.name %><% if animal.sex %>: <%= animal.sex.humanize %> <% end %> <% if animal.is_sterilized %>(Sterilized)<% end %>
	</td>
	<td class="status">
		<p><b><%= animal.animal_status.name %></b></p>
		<% if @current_shelter.is_kill_shelter
		   		if animal.euthanasia_date.present?
					if animal.euthanasia_date >= Date.today and animal.euthanasia_date <= Date.today + 2.weeks 
						days_left = days_left(animal.euthanasia_date, Date.today)
					end
				end %>
			<!-- <p><%= animal.shelter.name %></p> -->
			<p><b style="color:red;"><%= days_left %></b></p>
		<% end %>
	</td>
</tr>

