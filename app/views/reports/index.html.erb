<%= title "Reports"  %>

<%= content_for :javascripts do %>
	<%= javascript_include_tag "highcharts", "reports/reports", :cache => "cache/application/reports-index" %>
	<script type="text/javascript" charset="utf-8">
    var status_by_current_year;
    var status_by_current_month;
	var adopted_by_month;

	$(document).ready(function() {
	   status_by_current_year = new Highcharts.Chart({
	      chart: {
	         renderTo: 'status_by_current_year'
	      },
	      title: {
	         text: 'Animals by Status - <%= current_year %>'
	      }	,
			      plotArea: {
			         shadow: null,
			         borderWidth: null,
			         backgroundColor: null
			      },
			      tooltip: {
			         formatter: function() {
			            return '<b>'+ this.point.name +' Total</b>: '+ this.y;
			         }
			      },
			      plotOptions: {
			         pie: {
			            allowPointSelect: true,
			            cursor: 'pointer',
			            dataLabels: {
			               enabled: false
			            },
			            showInLegend: true
			         }
			      },
			       series: [{
			         type: 'pie',
			         name: 'Browser share',
			         data: <%=  raw status_by_current_year.map{|status, count| [status, count.to_i] }.inspect %>
			      }]
	   });
	status_by_current_month = new Highcharts.Chart({
	      chart: {
	         renderTo: 'status_by_current_month'
	      },
	      title: {
	         text: 'Animals by Status - <%=format_date(:month_only, Date.today)%>'
	      }	,
			      plotArea: {
			         shadow: null,
			         borderWidth: null,
			         backgroundColor: null
			      },
			      tooltip: {
			         formatter: function() {
			            return '<b>'+ this.point.name +' Total</b>: '+ this.y;
			         }
			      },
			      plotOptions: {
			         pie: {
			            allowPointSelect: true,
			            cursor: 'pointer',
			            dataLabels: {
			               enabled: false
			            },
			            showInLegend: true
			         }
			      },
			       series: [{
			         type: 'pie',
			         name: 'Browser share',
			         data: <%=  raw status_by_current_month.map{|status, count| [status, count.to_i] }.inspect %>
			      }]
	   });
	
	
	
	
				
		adopted_by_month = new Highcharts.Chart({
			chart: {
			 	renderTo: 'adopted_by_month'
			 },
			 title: {
			 	text: 'Adopted by Month - 2011'
			 },
			 xAxis: {
			 	categories: ['Apples', 'Oranges', 'Pears', 'Bananas', 'Plums']
			 },
			 tooltip: {
			 	formatter: function() {
			 		var s;
			 		if (this.point.name) { // the pie chart
			 			s = ''+
			 				this.point.name +': '+ this.y +' fruits';
			 		} else {
			 			s = ''+
			 				this.x  +': '+ this.y;
			 		}
			 		return s;
			 	}
			 },
			 series: [{
			 	type: 'column',
			 	name: 'Jane',
			 	data: [3, 2, 1, 3, 4]
			 }, {
			 	type: 'column',
			 	name: 'John',
			 	data: [2, 3, 5, 7, 6]
			 }, {
			 	type: 'column',
			 	name: 'Joe',
			 	data: [4, 3, 3, 9, 0]
			 }]
		});
	
	});
	</script>
<% end %>

