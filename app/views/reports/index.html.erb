<%= title "Reports"  %>

<%= content_for :javascripts do %>
	<script type="text/javascript">
		$(function() {
			Reports.initialize();
		});
	</script>
<% end %>

<%= content_for :page_content do %>

	<div class="page_heading blue">
		<h1>Reports</h1>
	</div>

	<div class="page_content">

		<div class="stats">
			<h2>Current Month</h2>
			<div class="count_sections">
				<div>
					<h3><%= @active_count_month %></h3>
					<p>Total Active</p>
				</div>
				<div>
					<h3><%= @total_adoptions_month %></h3>
					<p>Total Adoptions</p>
				</div>
				<div>
					<h3 class="euthanized_color"><%= @total_euthanized_month %></h3>
					<p>Total Euthanized</p>
				</div>
			</div>
		</div>

		<div class="stats">
			<h2>Year to Date</h2>
			<div class="count_sections">
				<div>
					<h3><%= @active_count_ytd %></h3>
					<p>Total Active</p>
				</div>
				<div>
					<h3><%= @total_adoptions_ytd %></h3>
					<p>Total Adoptions</p>
				</div>
				<div>
					<h3 class="euthanized_color"><%= @total_euthanized_ytd %></h3>
					<p>Total Euthanized</p>
				</div>
			</div>
    </div>

    <div class="stats">
			<h2>Monthly Totals</h2>

      <div class="filters">
        <span class="left">
          <%= label_tag :selected_month, "Select month:" %>
          <%= select_month(Date.today, :field_name => :selected_month, :prefix => "", :start_month => current_month )%>
        </span>
        <span class="leftPadded">
          <%= label_tag :selected_year, "Select year:" %>
          <%= select_year(Date.today, :field_name => :selected_year, :prefix => "", :start_year => current_year - 3, :end_year => current_year)%>
        </span>
        <span class="leftPadded">
          <%= submit_tag "Go", :disable_with => '...', :id => "submit_report" %>
        </span>
      </div>
      <div class="separator"></div>
    </div>

		<div id="status_by_month_year" class="report"></div>
		<div class="separator"></div>
		<div id="type_by_month_year"class="report"></div>
	</div>

<% end %>

<%= content_for :sidebar do %>
	<%= render "sidebar" %>
<% end %>
