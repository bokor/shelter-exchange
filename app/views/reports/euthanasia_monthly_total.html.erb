<%= title "Euthanasia Monthly Total - Reports"  %>

<%= content_for :javascripts do %>
	<%= javascript_include_tag "highcharts", "reports/reports", :cache => "cache/application/reports-index" %>
	<script type="text/javascript">
		Reports.euthanasiaMonthlyTotal('#date_report_selected_year', 'euthanasia_monthly_total');
	</script>
<% end %>

<%= content_for :page_content do %>

	<div class="page_heading yellow_background">
		<h1>Reports</h1>
		<div class="action_links">
			<%= label_tag :report_selected_year, "Select year" %>
			<%= select_year(Date.today, {:field_name => :report_selected_year, :start_year => current_year - 3, :end_year => current_year}, {:onchange => "Reports.euthanasiaMonthlyTotal(this, 'euthanasia_monthly_total');"})%>
		</div>
	</div>
	<div class="page_content">
		<div id="euthanasia_monthly_total" class="report_container"></div>
	</div>

<% end %>

<%= content_for :sidebar do %>
	<%= render "sidebar" %>
<% end %>